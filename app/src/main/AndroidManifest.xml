<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.brayan.surveyapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sv_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sv_logo_round"
        android:supportsRtl="true"
        android:name=".coreapp.application.MasterApp"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SurveyScreenActivity"
            android:label="@string/survey_screen_title" />
        <activity
            android:name=".surveychooser.SurveyChooserActivity"
            android:label="@string/survey_chooser_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".organizationscreen.OrganizationActivity"
            android:label="@string/organization_screen_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>